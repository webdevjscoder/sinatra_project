<h1>You are in the edit page</h1>
<%= current_user.username %> is editing this page.
<br>
<form action=<%= "/homepage/#{current_user.id}" %> method="post">
  <input type="hidden" name="_method" value="put">
  <label for="username">Username:</label>
  <input type="text" name="user[username]" value=<%= current_user.username %>>
  <br>
  <label for="email">Email:</label>
  <input type="text" name="user[email]" value=<%= current_user.email %>>
  <br>
  <input type="submit" value="Update">
</form>
<br>
<br>
<form action=<%= "/homepage/#{current_user.id}" %> method="post">
    <input type="hidden" name="_method" value="delete">
    <input type="submit" value=<%= "Delete #{current_user.username}" %>>
</form>
<a href="/homepage/<%= current_user.id %>">Back to Homepage</a>